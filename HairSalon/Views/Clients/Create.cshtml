@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<div class="container-fluid">
  <div class="jumbotron">
    <h4>Add a Client!</h4>
  </div>
    @using (Html.BeginForm())
{
    @Html.LabelFor(model => model.ClientName)
    @Html.TextBoxFor(model => model.ClientName)
    @Html.LabelFor(model => model.ClientPhone)
    @Html.EditorFor(model => model.ClientPhone)
    @Html.LabelFor(model => model.ClientEmail)
    @Html.TextBoxFor(model => model.ClientEmail)
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <input type="submit" value="Add new Client" />
}
    <p>@Html.ActionLink("Show all Clients", "Index")</p>
</div>
@Html.Partial("Header")
@Html.Partial("Footer")