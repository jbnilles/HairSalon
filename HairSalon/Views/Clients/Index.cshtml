@{
  Layout = "_Layout";
}
@using HairSalon.Models;


<div class="container-fluid">
  <div class="jumbotron">
    <h1>Clients</h1>
  </div>
    @using (Html.BeginForm("Search","clients"))
    {
    
    @Html.Label("clientName", "Search For Client by Name")
    @Html.TextBox("clientName")
    <input type="submit" value="Search" />
    }
    @if (@Model.Count == 0)
    {
    <h3>No clients found!</h3>
    }
    @foreach (Client client in Model)
    {
    <li>@client.ClientName | <a href="/clients/details/@client.ClientId">details</a> </li>
    }
    <p>@Html.ActionLink("Add a Client","Create")</p>
    <p>@Html.ActionLink("Home","Index","Home")</p>
</div>
@Html.Partial("Header")
@Html.Partial("Footer")