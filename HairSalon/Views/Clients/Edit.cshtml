@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client


<div class="container">
  <div class="jumbotron">
    <h4>Edit  @Model.ClientName!</h4>
  </div>
    
    @using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClientId)
    @Html.LabelFor(model => model.ClientName)
    @Html.EditorFor(model => model.ClientName, new {required = "required"})
    @Html.LabelFor(model => model.ClientPhone)
    @Html.EditorFor(model => model.ClientPhone)
    @Html.LabelFor(model => model.ClientEmail)
    @Html.EditorFor(model => model.ClientEmail)
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")

    <input type="submit" value="Save" />
}
    <p>@Html.ActionLink("Show all Clients", "Index")</p>
</div>
@Html.Partial("Header")
@Html.Partial("Footer")