@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<div class="container-fluid">
  <div class="jumbotron">
    <h1>Appointments Scheduled</h1>
  </div>
    @using (Html.BeginForm("Search","Appointments"))
    {
    
    @Html.Label("clientName", "Search For Appointments by Name")
    @Html.TextBox("clientName")
    <input type="submit" value="Search" />
    }
    @if (@Model.Count == 0)
    {
    <h3>No Appoointments found!</h3>
    }
    @foreach (Appointment appointment in Model)
    {
    <li>@appointment.Client.ClientName | @appointment.Stylist.StylistName | <a href="/appointments/details/@appointment.AppointmentId">details</a> </li>
    }
    <p>@Html.ActionLink("Add a Client","Create")</p>
    <p>@Html.ActionLink("Home","Index","Home")</p>
</div>
@Html.Partial("Header")
@Html.Partial("Footer")