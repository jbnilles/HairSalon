@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class="container-fluid">
  <div class="jumbotron">These are our stylists!</div>
  @if (@Model.Count == 0)
  {
    <h3>No Stylists have been added yet!</h3>
  }

  <ul>
    @foreach (Stylist stylist in Model)
    {
        <li>@stylist.StylistName | <a href="/stylists/details/@stylist.StylistId"> Details</a> </li>
    }
  </ul>
  <p>@Html.ActionLink("Add a Stylist","Create")</p>
  <p>@Html.ActionLink("Home","Index","Home")</p>


</div>
@Html.Partial("Header")
@Html.Partial("Footer")